{% extends 'base.html.twig' %}

{% block title %}Подкатегории: {{ parent.name }}{% endblock %}

{% block body %}
    <h1>{{ parent.name }}</h1>
    <h2>Подкатегории</h2>
    <div class="row">
        {% for category in categories %}
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('category_show', {id: category.id}) }}">{{ category.name }}</a>
                        </h5>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <a href="{{ path('category_index') }}" class="btn btn-secondary btn-sm">&larr; Все категории</a>
{% endblock %}